<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cta_store"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:background="@drawable/panel_dark_red"
    android:onClick="ctaListener"
    android:padding="12dp">

    <TextView
        android:id="@+id/cta_store_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cta_shop_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cta_store_title"
        android:text="@string/cta_shop_caption"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_small"/>
</RelativeLayout>