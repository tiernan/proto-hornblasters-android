<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/panel_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_cart_image_height"
        android:layout_weight="0.4"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cd_product_image"
        android:padding="8dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/placeholder169"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:divider="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/product_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_light"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="@string/placeholder_title_long"/>

        <TextView
            android:id="@+id/product_free_shipping"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff00dd00"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Free Shipping"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/primary_text_light"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="$599.99"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#E0E0E0"/>

        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/primary_text_light"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="5"/>
    </LinearLayout>

</LinearLayout>